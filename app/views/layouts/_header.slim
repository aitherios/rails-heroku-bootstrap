header#header-page role="banner"

  #header-page-inner

    - if request.fullpath == root_path
      .logo-page NOME SITE
    - else
      .logo-page
        a href="#{root_path}" title="" NOME SITE

    nav.nav-page role="navigation"
      ul
        li.active
          a href="/" title="Item 1" Item 1
        li
          a href="/" title="Item 2" Item 2

    nav.nav-user role="navigation"
      ul
        - if current_user.present?
          li.item-avatar
            .user-avatar.small
              .user-avatar-inner
                = image_tag(current_user.avatar.thumb.url)

          li.item-username Ol√° <b>#{current_user.name.split(" ").first}</b>

          li.item-account
            a href="#{edit_user_path}" title="Minha Conta" Minha Conta

          li.item-logout
            a href="#{destroy_user_session_path}" title="Sair" Sair
        - else
          li.item-login
